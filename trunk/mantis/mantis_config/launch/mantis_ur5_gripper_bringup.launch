<?xml version="1.0" ?>
<launch>
	<!-- ____________________________ Input Arguments ____________________________  -->
	<arg name="sim_only" default="true"/>
	<arg name="controller_ip" default="192.168.32.3"/>

	<!-- ____________________________ Fixed Parameters ____________________________  -->
	<arg name="robot_description" 
		default="$(find xacro)/xacro.py '$(find mantis_config)/urdf/mantis_ur5_arm_workspace.xacro'"/>

	<arg name="arm_namespace" value="ur5_arm"/>

	<group ns="$(arg arm_namespace)">

		<!-- ____________________________ General Launch ____________________________  -->
		<!-- URDF loaded to parameter server -->
		<param name="robot_description"  command="$(arg robot_description)"/>
		<!-- Get TF -->
		<node pkg="robot_state_publisher" name="st_pub" type="state_publisher"/>

		<!-- ____________________________ Start robot specific nodes ____________________________  -->
		<!-- driver -->
		<node unless="$(arg sim_only)" name="ur5_driver" pkg="ur5_driver" type="driver.py" args="192.168.32.5" required="true" output="screen" />

		<!-- TF Buffer Server -->
		<node unless="$(arg sim_only)" pkg="tf2_ros" type="buffer_server" name="tf2_buffer_server" output="screen">
			<param name="buffer_size" value="120.0"/>
		</node>

		<!-- gripper interface -->
		<include unless="$(arg sim_only)" file="$(find mantis_io)/launch/mantis_io.launch"/>

		<!-- __________________________________ Simulation only __________________________________  -->
		<rosparam if="$(arg sim_only)" command="load" file="$(find mantis_ur5_arm_navigation)/config/joint_definitions.yaml"/>
		<node if="$(arg sim_only)" pkg="object_manipulation_tools" name="simulated_robot_controller"
			type="simulated_robot_controller" output="screen"/>

  		<node if="$(arg sim_only)" pkg="object_manipulation_tools" name="joint_trajectory_action" type="joint_trajectory_action" output="screen"/>

		<!--node if="$(arg sim_only)" pkg="tf2_ros" type="buffer_server" name="tf2_buffer_server" output="screen">
			<param name="buffer_size" value="120.0"/>
		</node-->

		<!-- gripper executer action node -->
		<node if="$(arg sim_only)" pkg="object_manipulation_tools" type="grasp_action_service" name="gripper_interface" output="screen"/>
	 
	</group>
</launch>
