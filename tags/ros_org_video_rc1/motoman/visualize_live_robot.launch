<launch>
	<arg name="model" />
	<param name="robot_description" textfile="$(arg model)" />
	<node name="state_publisher" pkg="robot_state_publisher" type="state_publisher" ></node>
	<node name="robot_state" pkg="motoman" type="robot_state" />
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find motoman)/urdf.vcg"/>
</launch>
